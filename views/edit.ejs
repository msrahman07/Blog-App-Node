<%- include("partials/header"); %>

<div class="ui main text container segment">
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input type="text" name="blog[title]" value="<%=blog.title%>">
        </div>
        <div class="field">
            <label for="blog[title]">Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label for="blog[body]">Blog Content</label>
            <textarea name="blog[body]"><%=blog.body%></textarea>
        </div>
        <div class="field">
            <input class="ui violet inverted button" type="submit" value="update">
        </div>
    </form>
</div>

<%- include("partials/footer"); %>
