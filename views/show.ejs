<%- include("partials/header"); %>


<div class="ui main text container segment">
    <div class="ui huge header"><%=blog.title%></div>
        <div class="ui top attached">
            <div class="item">
                <img class="ui centered rounded image" src="<%=blog.image %>">
                <div class="content">
                    <span><%=blog.created.toDateString()%></span> 
                </div> <hr>
                <div class="description">
                    <p><%=blog.body%></p>
                </div> <br>
                <a class="ui orange inverted button" href="/blogs/<%=blog._id%>/edit">Edit</a>
                <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                    <button class="ui red inverted button">Delete</button>
                </form>
            </div>
        </div>
        <hr>
        <h2><label for="i_blog"><a href="http://localhost:3000/blogs">Blog App</a> <br>
        </label></h2>
        <iframe name="i_blog" src="http://localhost:3000/blogs" title="description" style="height:400px;width:400px">
        
</div>

<%- include("partials/footer"); %>
